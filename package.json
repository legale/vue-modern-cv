{
  "name": "vue-modern-cv",
  "homepage": "",
  "version": "0.0.1",
  "description": "Vue Modern CV - project based on Vue Notus template by Creative Tim",
  "repository": "https://github.com/legale/vue-modern-cv",
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --mode production --dest docs",
    "lint": "vue-cli-service lint",
    "tailwind": "tailwind -i src/assets/styles/index.css -o src/assets/styles/tailwind.css --verbose",
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install && npm run build:tailwind && npm run serve"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.3",
    "@popperjs/core": "2.9.1",
    "@tailwindcss/forms": "^0.5.2",
    "@vue/babel-preset-app": "^5.0.8",
    "@vue/compiler-sfc": "^3.2.37",
    "axios": "^0.27.2",
    "chart.js": "2.9.4",
    "fontawesome-free": "^1.0.4",
    "graceful-fs": "^4.2.10",
    "html2pdf.js": "^0.10.1",
    "minimatch": "^5.1.0",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.1",
    "tailwindcss": "^3.1.6",
    "vue": "^3.2.36",
    "vue-loader": "^17.0.0",
    "vue-router": "4.0.5"
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@babel/eslint-parser": "7.13.10",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "autoprefixer": "10.2.5",
    "eslint": "^8.20.0",
    "eslint-plugin-vue": "^9.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
